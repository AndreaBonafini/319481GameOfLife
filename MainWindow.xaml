<Window x:Class="_319481GameOfLife.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_319481GameOfLife"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="500" PreviewMouseDown="Window_PreviewMouseDown" FontSize="25">
    <Canvas x:Name="canvas">
        <Button x:Name="btnStart" Click="BtnStart_Click"
                Canvas.Top="120" Canvas.Left="410" Width="65">Start</Button>
        <Button x:Name="btnStop" Click="BtnStop_Click"
                Canvas.Top="160" Canvas.Left="410" Width="65">Stop</Button>
        <Button x:Name="btnReset" Click="BtnReset_Click"
                Canvas.Top="200" Canvas.Left="410" Width="65">Reset</Button>
        <Button x:Name="btnExit" Click="BtnExit_Click"
                Canvas.Top="240" Canvas.Left="410" Width="65">Exit</Button>
    </Canvas>
</Window>
